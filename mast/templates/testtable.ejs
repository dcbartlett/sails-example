<!--
	REMEMBER:
	Don't use IDs in css selectors for templates!
	IDs are stripped from templates!
-->

<div class="testtable" id="mast-template-testtable">
	<!-- Only display vote buttons if an item is selected -->
	<a class="voteDown" style="cursor:pointer; {% if (!selected) { %} display: none; {% } %}">\/</a>
	<a class="voteUp" style="cursor:pointer; {% if (!selected) { %} display: none; {% } %}">/\</a>
	<a class="addRow">+ Add row</a>
	<input type="text" class="searchbox" placeholder="Search"/>
	<div class="clear"></div>
	<ul class="row-outlet"></ul>
</div>


<div class="empty" id="mast-template-testtable-empty">
	<span>Nothing to see here...</span>
</div>


<li class="row {% if (highlighted) { %} highlighted {% } %}" id="mast-template-testtable-row">
	<span>{{-title}} </span>
	<a class="doDelete" style="cursor:pointer;">x</a>
	<a class="votes">{{- votes}}</a>
	{% if (allowEdit) { %}<a class="doUpdate" style="cursor:pointer;"></a> {% } %}
</li>